<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/element_list"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight" >

    <TextView
        android:id="@+id/list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/list_lastupdate_label"
        style="@style/element_list_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_name"
        android:singleLine="true"
        android:text="@string/list.last_updated" />

    <TextView
        android:id="@+id/list_lastupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_name"
        android:layout_toRightOf="@id/list_lastupdate_label"
        android:singleLine="true" />

    <CheckBox
        android:id="@+id/select_list_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"/>
</RelativeLayout>